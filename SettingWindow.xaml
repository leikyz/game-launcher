<Window x:Class="Launcher.SettingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Launcher"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="NoResize"
        Title="Settings" 
        Height="220" Width="480" 
        FontFamily="One Slice">
    <Window.Resources>
        <Style x:Key="Made">
            <Setter Property="TextElement.FontFamily" Value="pack://application:,,,/Fonts/#Made Tommy" />
        </Style>
        <Style x:Key="Hiro">
            <Setter Property="TextElement.FontFamily" Value="pack://application:,,,/Fonts/#HIRO MISAKE" />
        </Style>

        <Style x:Key="ImageStyle" TargetType="{x:Type Image}">
            <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
            <Setter Property="RenderTransform">
                <Setter.Value>
                    <ScaleTransform ScaleX="1" ScaleY="1"/>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Trigger.EnterActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetProperty="RenderTransform.ScaleX" To="1.2" Duration="0:0:0.2"/>
                                <DoubleAnimation Storyboard.TargetProperty="RenderTransform.ScaleY" To="1.2" Duration="0:0:0.2"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </Trigger.EnterActions>
                    <Trigger.ExitActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetProperty="RenderTransform.ScaleX" To="1" Duration="0:0:0.2"/>
                                <DoubleAnimation Storyboard.TargetProperty="RenderTransform.ScaleY" To="1" Duration="0:0:0.2"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </Trigger.ExitActions>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="B" TargetType="Button">
            <Setter Property="OverridesDefaultStyle" Value="True" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="TextElement.FontFamily" Value="pack://application:,,,/Fonts/#Made Tommy" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Name="border" BorderThickness="0" BorderBrush="Black" Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Opacity" Value="1" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="Button">
            <Setter Property="OverridesDefaultStyle" Value="True" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Name="border" BorderThickness="0" BorderBrush="Black" Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Opacity" Value="1" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Window.Background>
        <SolidColorBrush Opacity="0" Color="White"/>
    </Window.Background>

    <Grid>
        <Image x:Name="bg" Stretch="UniformToFill" Source="pack://application:,,,/Resources/bg2.jpg" >
            <Image.Effect>
                <DropShadowEffect/>
            </Image.Effect>
        </Image>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Label Content="Paramètres" Style="{StaticResource Hiro}" HorizontalAlignment="Left" Margin="10,5,0,0" VerticalAlignment="Center" Width="192" FontSize="28" Height="44" FontWeight="Normal" FontStyle="Normal" Foreground="#a69065" Grid.Row="0"/>
            <Button x:Name="btnClose" Click="closeButton_Click" HorizontalAlignment="Right" Margin="0,10,10,0" VerticalAlignment="Top" Width="39" Height="26" Grid.Row="0">
                <Image x:Name="cross" Source="pack://application:,,,/Resources/newclose.png" Visibility="Visible" Stretch="UniformToFill" Height="22" Width="22" />
            </Button>

            <StackPanel Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center">
                <Button x:Name="folderButton" FontFamily="MV Boli"  BorderThickness="0" Click="folderButton_Click" BorderBrush="Transparent" FontSize="22" FontWeight="Normal" Width="210" Foreground="White" Cursor="Hand" OpacityMask="Black" Margin="0,0,0,10">
                    <Button.Content>
                        <Border CornerRadius="5" Height="28" Width="203" BorderBrush="White" Background="#383123" BorderThickness="1,1,1,1" RenderTransformOrigin="0.5,0.5" >
                            <Border.RenderTransform>
                                <TransformGroup>
                                    <ScaleTransform/>
                                    <SkewTransform/>
                                    <TranslateTransform/>
                                </TransformGroup>
                            </Border.RenderTransform>
                            <TextBlock HorizontalAlignment="Left" Style="{StaticResource Hiro}" VerticalAlignment="Top" Width="180" Height="18" FontSize="12" Foreground="#a69065" Margin="28,7,0,0">
                                <TextBlock.Effect>
                                    <DropShadowEffect Color="Black" Opacity="0.5" ShadowDepth="2" BlurRadius="5" Direction="270"/>
                                </TextBlock.Effect>
                                <Run Language="fr-fr" Text="Ouvrir le dossier du jeu"/>
                            </TextBlock>
                        </Border>
                    </Button.Content>
                </Button>

                <CheckBox Content="Launch on startup" 
                          x:Name="chkStartup" 
                          Style="{StaticResource Hiro}" 
                          HorizontalAlignment="Center" 
                          Margin="2,10,0,15" 
                          VerticalAlignment="Top" 
                          Width="180" 
                          FontSize="14" 
                          FontWeight="Normal" 
                          FontStyle="Normal" 
                          Foreground="#a69065"
                          BorderBrush="#ebf3ff" 
                          Background="#FFE9E9E9"
                          Checked="chkStartup_Checked" 
                          Unchecked="chkStartup_UnChecked"/>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button x:Name="btnSite" Style="{StaticResource B}" Click="Site_Click" Background="{x:Null}" BorderBrush="{x:Null}" Cursor="Hand" Margin="5">
                        <Image x:Name="gear2" Style="{StaticResource ImageStyle}"  Source="pack://application:,,,/Resources/site.png" Visibility="Visible" Stretch="Fill" Height="28" Width="30" />
                        <Button.ToolTip>
                            <ToolTip>Site web</ToolTip>
                        </Button.ToolTip>
                    </Button>

                    <Button x:Name="btnReload" Style="{StaticResource B}" Click="Repair_Click" Background="{x:Null}" BorderBrush="{x:Null}" Cursor="Hand" Margin="15,5,15,5">
                        <Image x:Name="gear1" Style="{StaticResource ImageStyle}"  Source="pack://application:,,,/Resources/repair.png" Visibility="Visible" Stretch="Fill" Height="28" Width="30" />
                        <Button.ToolTip>
                            <ToolTip>Réparer le jeu</ToolTip>
                        </Button.ToolTip>
                    </Button>

                    <Button x:Name="btnDiscord" Style="{StaticResource B}" Click="Discord_Click" Background="{x:Null}" BorderBrush="{x:Null}" Cursor="Hand" Margin="5">
                        <Image x:Name="discord" Style="{StaticResource ImageStyle}"  Source="pack://application:,,,/Resources/discord.png" Visibility="Visible" Stretch="Fill" Height="28" Width="30" />
                        <Button.ToolTip>
                            <ToolTip>Discord</ToolTip>
                        </Button.ToolTip>
                    </Button>
                </StackPanel>
            </StackPanel>

            <Label Content="Developed by LEIKYZ" Style="{StaticResource Hiro}" HorizontalAlignment="Left" Margin="5" VerticalAlignment="Bottom" Foreground="#a69065" Width="143" Height="20" Grid.Row="2" FontSize="10"/>
            <Label Name="versionLabel" Content="v1.0" Style="{StaticResource Hiro}" HorizontalAlignment="Right" Margin="5" VerticalAlignment="Bottom" Width="176" FontSize="12" Height="22" FontWeight="Normal" FontStyle="Normal" Foreground="#a69065" Grid.Row="2" HorizontalContentAlignment="Right"/>
        </Grid>
    </Grid>
</Window>